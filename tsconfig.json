{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "src",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "paths": {
      "*": ["node_modules/*", "types/*"],
    },
    "declaration": true
  },
  "include": ["src_ts/**/*"]
}